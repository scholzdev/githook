{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Githook",
  "scopeName": "source.githook",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#function-calls" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#groups" },
    { "include": "#builtins" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#macros" },
    { "include": "#properties" }
  ],
  "repository": {
    "function-calls": {
      "patterns": [
        {
          "name": "entity.name.function",
          "match": "\\b(print|file|dir|glob|exec|rm)(?=\\s)"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(run|block|allow|when|if|else|match|foreach|for|parallel|group|macro|use|import|let|warn_if|block_if|in|as|break|continue|return|severity|enabled)\\b"
        },
        {
          "name": "keyword.other",
          "match": "\\b(file|content|diff|message|must|not|and|or)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.githook",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "variable.language.special.githook",
          "match": "\\b(http|git|env)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin",
          "match": "\\b(print|file|dir|glob|exec|rm)\\b"
        }
      ]
    },
    "groups": {
      "patterns": [
        {
          "name": "entity.name.type.githook",
          "match": "(?<=group\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.tag.githook",
          "match": "(?<=group\\s+[a-zA-Z_][a-zA-Z0-9_]*\\s+)(info|warn|error|critical)"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.githook",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.githook",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.githook",
          "match": "//.*$"
        },
        {
          "name": "comment.block.githook",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.githook",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.githook",
          "match": "(==|!=|>|<|>=|<=|matches|contains)"
        },
        {
          "name": "keyword.operator.logical.githook",
          "match": "(and|or|not)"
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "name": "entity.name.function.githook",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*:[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.function.githook",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "variable.language.githook",
          "match": "\\b(branch_name|file_size|extension|basename|dirname|commit_message|env)\\b"
        }
      ]
    }
  }
}
