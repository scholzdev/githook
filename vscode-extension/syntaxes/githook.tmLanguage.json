{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Githook",
  "scopeName": "source.githook",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#macros" },
    { "include": "#properties" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.githook",
          "match": "\\b(run|block|allow|when|else|match|foreach|parallel|group|macro|use|import|let|warn_if|block_if|in|as)\\b"
        },
        {
          "name": "keyword.other.githook",
          "match": "\\b(file|content|diff|message|must|not|and|or)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.githook",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.githook",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.githook",
          "match": "//.*$"
        },
        {
          "name": "comment.block.githook",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.githook",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.githook",
          "match": "(==|!=|>|<|>=|<=|matches|contains)"
        },
        {
          "name": "keyword.operator.logical.githook",
          "match": "(and|or|not)"
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "name": "entity.name.function.githook",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*:[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "entity.name.function.githook",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "name": "variable.language.githook",
          "match": "\\b(branch_name|file_size|extension|basename|dirname|commit_message|env)\\b"
        }
      ]
    }
  }
}
